x88\x92F</td>\n\n                        <td>270</td>\n\n                        <td>P\xe2\x88\x92P</td>\n\n                        <td>215</td>\n                    </tr>\n\n                    <tr>\n                        <td>H\xe2\x88\x92Br</td>\n\n                        <td>370</td>\n\n                        <td>N\xe2\x88\x92P</td>\n\n                        <td>210</td>\n\n                        <td>P\xe2\x88\x92S</td>\n\n                        <td>230</td>\n                    </tr>\n\n                    <tr>\n                        <td>H\xe2\x88\x92I</td>\n\n                        <td>295</td>\n\n                        <td> N\xe2\x88\x92Cl</td>\n\n                        <td>200</td>\n\n                        <td>P\xe2\x88\x92Cl</td>\n\n                        <td>330</td>\n                    </tr>\n\n                    <tr>\n                        <td> C\xe2\x88\x92C</td>\n\n                        <td>345</td>\n\n                        <td>N\xe2\x88\x92Br</td>\n\n                        <td>245</td>\n\n                        <td>P\xe2\x88\x92Br</td>\n\n                        <td>270</td>\n                    </tr>\n\n                    <tr>\n                        <td>C=C</td>\n\n                        <td>611</td>\n\n                        <td>O\xe2\x88\x92O</td>\n\n                        <td>140</td>\n\n                        <td> P\xe2\x88\x92I</td>\n\n                        <td>215</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x89\xa1C</td>\n\n                        <td>837</td>\n\n                        <td> O=O</td>\n\n                        <td>498</td>\n\n                        <td>S\xe2\x88\x92S</td>\n\n                        <td>215</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92N</td>\n\n                        <td>290</td>\n\n                        <td>O\xe2\x88\x92F</td>\n\n                        <td> 160</td>\n\n                        <td>S\xe2\x88\x92Cl</td>\n\n                        <td>250</td>\n                    </tr>\n\n                    <tr>\n                        <td> C=N</td>\n\n                        <td>615</td>\n\n                        <td>O\xe2\x88\x92Si</td>\n\n                        <td>370</td>\n\n                        <td>S\xe2\x88\x92Br</td>\n\n                        <td>215</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x89\xa1N</td>\n\n                        <td>891</td>\n\n                        <td>O\xe2\x88\x92P</td>\n\n                        <td>350</td>\n\n                        <td> Cl\xe2\x88\x92Cl</td>\n\n                        <td>243</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92O</td>\n\n                        <td>350</td>\n\n                        <td> O\xe2\x88\x92Cl</td>\n\n                        <td>205</td>\n\n                        <td>Cl\xe2\x88\x92Br</td>\n\n                        <td>220</td>\n                    </tr>\n\n                    <tr>\n                        <td>C=O</td>\n\n                        <td>741</td>\n\n                        <td>O\xe2\x88\x92I</td>\n\n                        <td>200</td>\n\n                        <td>Cl\xe2\x88\x92I</td>\n\n                        <td>210</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x89\xa1O</td>\n\n                        <td>1080</td>\n\n                        <td>F\xe2\x88\x92F</td>\n\n                        <td>160</td>\n\n                        <td>Br\xe2\x88\x92Br</td>\n\n                        <td>190</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92F</td>\n\n                        <td>439</td>\n\n                        <td> F\xe2\x88\x92Si</td>\n\n                        <td>540</td>\n\n                        <td>Br\xe2\x88\x92I</td>\n\n                        <td>180</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92Si</td>\n\n                        <td>360</td>\n\n                        <td>F\xe2\x88\x92P</td>\n\n                        <td>489</td>\n\n                        <td> I\xe2\x88\x92I</td>\n\n                        <td>150</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92P</td>\n\n                        <td>265</td>\n\n                        <td>F\xe2\x88\x92S</td>\n\n                        <td>285</td>\n                        <td/>\n                        <td/>\n                    </tr>\n\n\n\n\n\n                </table>\n\n\n            </body>\n        </section>\n        <section>\n            <title>Average Bond Lengths and Bond Energies for Some Common Bonds</title>\n            <body>\n                <table>\n\n                    <tr>\n                        <th>Bond</th>\n\n                        <th> Bond Length (\xc3\x85)</th>\n\n                        <th> Bond Energy (kJ/mol)</th>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92C</td>\n\n                        <td> 1.54</td>\n\n                        <td>345</td>\n                    </tr>\n                    <tr>\n                        <td>C=C</td>\n\n                        <td>1.34</td>\n\n                        <td>611</td>\n                    </tr>\n\n                    <tr>\n                        <td> C\xe2\x89\xa1C</td>\n\n                        <td> 1.20</td>\n\n                        <td>837</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92N</td>\n\n                        <td> 1.43</td>\n\n                        <td>290</td>\n                    </tr>\n\n                    <tr>\n                        <td>C=N</td>\n\n                        <td>1.38</td>\n\n                        <td>615</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x89\xa1N</td>\n\n                        <td>1.16</td>\n\n                        <td>891</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x88\x92O</td>\n\n                        <td>1.43</td>\n\n                        <td>350</td>\n                    </tr>\n\n                    <tr>\n                        <td>C=O</td>\n\n                        <td>1.23</td>\n\n                        <td>741</td>\n                    </tr>\n\n                    <tr>\n                        <td>C\xe2\x89\xa1O</td>\n\n                        <td> 1.13</td>\n\n                        <td>1080</td>\n                    </tr>\n\n                </table>\n\n            </body>\n        </section>\n        <wb:inline idref="bond_energy_1digt" purpose="didigetthis"/>\n        <section>\n            <title>Calculating Change in Enthalpy from Bond Energies</title>\n            <body>\n                <p>We can use bond energies to calculate approximate enthalpy changes for reactions\n                    where enthalpies of formation are not available. Calculations of this type will\n                    also tell us whether a reaction is exothermic or endothermic. An exothermic\n                    reaction (\xce\x94<em style="italic">H</em> negative, heat produced) results when the\n                    bonds in the products are stronger than the bonds in the reactants. An\n                    endothermic reaction (\xce\x94<em style="italic">H</em> positive, heat absorbed)\n                    results when the bonds in the products are weaker than those in the\n                    reactants.</p>\n                <p>The enthalpy change, \xce\x94<em style="italic">H</em>, for a chemical reaction is\n                    approximately equal to the sum of the energy required to break all bonds in the\n                    reactants (energy \xe2\x80\x9cin\xe2\x80\x9d, positive sign) plus the energy released when all bonds\n                    are formed in the products (energy \xe2\x80\x9cout,\xe2\x80\x9d negative sign). This can be expressed\n                    mathematically in the following way:</p>\n\n              <image src="../../../webcontent/green_line.png"></image>\n                    <dl>\n                        <dt>Calculating Change in Enthalpy from Bond Energies</dt>\n                        \n                   <dd>\n                    <formula>$$\\mathrm\\Delta H\\;=\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{broken}}\\;-\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{formed}\\;}$$</formula></dd>\n                    </dl>\n              <image src="../../../webcontent/green_line.png"></image>\n                <p>In this expression, the symbol \xc6\xa9 means \xe2\x80\x9cthe sum of\xe2\x80\x9d and D represents the bond\n                    energy in kilojoules per mole, which is always a positive number. The bond\n                    energy is obtained from a table, like the <em style="italic">Bond Energies</em> table above, and will depend on whether the\n                    particular bond is a single, double, or triple bond. Thus, in calculating\n                    enthalpies in this manner, it is important that we consider the bonding in all\n                    reactants and products. Because D values are typically averages for one type of\n                    bond in many different molecules, this calculation provides a rough estimate,\n                    not an exact value, for the enthalpy of reaction.</p>\n                <example>\n                    <p>Using bond energies from the table above, calculate the enthalpy change of\n                        the following reaction:</p>\n                    <formula>$${\\mathrm\n                        H}_2(g)\\;+\\;{\\mathrm{Cl}}_2(g)\\;\\;\\longrightarrow\\;\\;2\\;\\mathrm{HCl}(g)\\;$$</formula>\n                    <p>or</p>\n                    <formula>$$\\mathrm H\xe2\x80\x93\\mathrm\n                        H(g)\\;+\\;\\mathrm{Cl}\xe2\x80\x93\\mathrm{Cl}(g)\\;\\;\\longrightarrow\\;\\;2\\;\\mathrm\n                        H\xe2\x80\x93\\mathrm{Cl}(g)$$</formula>\n                    <p>To form two moles of HCl, one mole of H\xe2\x80\x93H bonds and one mole of Cl\xe2\x80\x93Cl bonds\n                        must be broken. The energy required to break these bonds is the sum of the\n                        bond energy of the H\xe2\x80\x93H bond (436 kJ/mol) and the Cl\xe2\x80\x93Cl bond (243 kJ/mol).\n                        During the reaction, two moles of H\xe2\x80\x93Cl bonds are formed (bond energy = 432\n                        kJ/mol), releasing 2 \xc3\x97 432 kJ; or 864 kJ. Because the bonds in the products\n                        are stronger than those in the reactants, the reaction releases more energy\n                        than it consumes:</p>\n                    <formula>$$\\mathrm\\Delta H\\;=\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{broken}}\\;-\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{formed}}$$</formula>\n                    <formula>$$\\Delta H\\;=\\;\\lbrack D_{\\mathrm H-\\mathrm\n                        H}\\;+\\;D_{\\mathrm{Cl}-\\mathrm{Cl}}\\rbrack\\;-\\;2\\;D_{\\mathrm\n                        H-\\mathrm{Cl}}$$</formula>\n                    <formula>$$=\\;\\lbrack436\\;+\\;243\\rbrack\\;-\\;2(432)\\;=\\;-185\\;\\mathrm{kJ}$$</formula>\n\n\n                </example>\n                <example>\n                    <p>Methanol, CH<sub>3</sub>OH, may be an excellent alternative fuel. The\n                        high-temperature reaction of steam and carbon produces a mixture of the\n                        gases carbon monoxide, CO, and hydrogen, H<sub>2</sub>, from which methanol\n                        can be produced. Using the bond energies in Table, calculate the approximate\n                        enthalpy change, \xce\x94<em style="italic">H</em>, for the reaction here:</p>\n                    <formula>$$\\mathrm{CO}(g)\\;+\\;2\\;{\\mathrm\n                        H}_2(g)\\;\\;\\longrightarrow\\;\\;{\\mathrm{CH}}_3\\mathrm{OH}(g)$$</formula>\n                    <p>First, we need to write the Lewis structures of the reactants and the\n                        products:</p>\n                    <image src="../webcontent/bond_energy1.jpg" width="600"\n                        alt="A set of Lewis diagrams show a chemical reaction. The first structure shows a carbon atom with a lone pair of electrons triple bonded to an oxygen with a lone pair of electrons. To the right of this structure is a plus sign, then the number 2 followed by a hydrogen atom single bonded to a hydrogen atom. To the right of this structure is a right-facing arrow followed by a hydrogen atom single bonded to a carbon atom that is single bonded to two hydrogen atoms and an oxygen atom with two lone pairs of electrons. The oxygen atom is also single bonded to a hydrogen atom."/>\n\n                    <p> From this, we see that \xce\x94<em style="italic">H</em> for this reaction involves\n                        the energy required to break a C\xe2\x80\x93O triple bond and two H\xe2\x80\x93H single bonds, as\n                        well as the energy produced by the formation of three C\xe2\x80\x93H single bonds, a\n                        C\xe2\x80\x93O single bond, and an O\xe2\x80\x93H single bond. We can express this as follows: </p>\n                    <formula>$$\\mathrm\\Delta H\\;=\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{broken}}\\;-\\;\\mathrm\n                        \xc6\xa9D_{\\mathrm{bonds}\\;\\mathrm{formed}}$$</formula>\n                    <formula>$$\\mathrm\\Delta H\\;=\\;\\lbrack D_{\\mathrm C\\equiv\\mathrm\n                        O}\\;+\\;2(D_{\\mathrm H-\\mathrm H})\\rbrack\\;-\\;\\lbrack3(D_{\\mathrm C-\\mathrm\n                        H})\\;+\\;D_{\\mathrm C-\\mathrm O}\\;+\\;D_{\\mathrm O-\\mathrm\n                        H}\\rbrack$$</formula>\n                    <p>Using the bond energy values in the table above, we obtain:</p>\n                    <formula>$$\\mathrm\\Delta\n                        H\\;=\\;\\lbrack1080\\;+\\;2(436)\\rbrack\\;-\\;\\lbrack3(415)\\;+\\;350\\;+\\;464\\rbrack\\;\\;=-107\\;\\mathrm{kJ}$$</formula>\n\n                </example>\n\n                <section>\n                    <title>Slide Show</title>\n                    <body><iframe src="https://h5p.org/h5p/embed/182983" width="800" height="472"/></body>\n                </section>\n                \n                <composite_activity purpose="learnbydoing">\n                    <p>In the following series of activities, we will calculate the change in\n                        enthalpy for the reaction below using bond energies.</p>\n                    <formula>$${\\mathrm C}_2{\\mathrm H}_4(g)\\;+\\;3\\;{\\mathrm\n                        O}_2(g)\\;\\;\\longrightarrow\\;\\;2\\;{\\mathrm{CO}}_2(g)\\;+\\;2\\;{\\mathrm\n                        H}_2\\mathrm O(g)$$</formula>\n                    <wb:inline idref="bond_energies_lbd"></wb:inline>\n                </composite_activity>\n                <wb:inline idref="bond_energies2_digt" purpose="didigetthis"></wb:inline>\n\n                <p>Adapted from <link href="https://cnx.org/contents/havxkyvS@9.422:b39avmGq@29/Preface"\n                    >Openstax Chemistry</link> under <link\n                        href="https://creativecommons.org/licenses/by/4.0/"> Creative Commons Attribution\n                        4.0 License. </link></p>\n                <p>Download for free at <link\n                    href="http://cnx.org/contents/85abf193-2bd2-4908-8563-90b8a7ac8df6@9.312"\n                    >http://cnx.org/contents/85abf193-2bd2-4908-8563-90b8a7ac8df6@9.312.</link></p>\n\n          